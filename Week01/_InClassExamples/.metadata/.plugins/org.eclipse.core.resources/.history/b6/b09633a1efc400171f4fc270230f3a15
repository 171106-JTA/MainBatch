package com.revature.exception;

import java.util.InputMismatchException;
import com.revature.model.Constants;

public class InvalidInputException extends InputMismatchException {

	/**
	 * 
	 */
	private static final long serialVersionUID = -3893174906902063081L;

	public InvalidInputException(int input, int max) {
		super(Constants.ERR_INPUT + max + ": " + input);
	}
}
