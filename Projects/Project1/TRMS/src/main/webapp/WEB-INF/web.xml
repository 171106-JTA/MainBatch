<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
  <display-name>TRMS</display-name>
  <welcome-file-list>
    <welcome-file>portal.html</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.htm</welcome-file>
    <welcome-file>default.jsp</welcome-file>
  </welcome-file-list>
  <servlet>
    <description></description>
    <display-name>FrontController</display-name>
    <servlet-name>FrontController</servlet-name>
    <servlet-class>com.revature.controller.FrontControllerServlet</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>FrontController</servlet-name>
    <url-pattern>*.do</url-pattern>
  </servlet-mapping>
  <filter>
    <display-name>LoginAuthenticationFilter</display-name>
    <filter-name>LoginAuthenticationFilter</filter-name>
    <filter-class>com.revature.controller.filter.LoginAuthenticationFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>LoginAuthenticationFilter</filter-name>
    <url-pattern>/login.do</url-pattern>
  </filter-mapping>
  <filter>
    <display-name>RegistrationAuthorizationFilter</display-name>
    <filter-name>RegistrationAuthorizationFilter</filter-name>
    <filter-class>com.revature.controller.filter.RegistrationAuthorizationFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>RegistrationAuthorizationFilter</filter-name>
    <url-pattern>/register.do</url-pattern>
  </filter-mapping>
  <filter>
    <display-name>RequestCreationFilter</display-name>
    <filter-name>RequestCreationFilter</filter-name>
    <filter-class>com.revature.controller.filter.RequestCreationFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>RequestCreationFilter</filter-name>
    <url-pattern>/createRequest.do</url-pattern>
  </filter-mapping>
  <filter>
    <display-name>EventCreationFilter</display-name>
    <filter-name>EventCreationFilter</filter-name>
    <filter-class>com.revature.controller.filter.EventCreationFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>EventCreationFilter</filter-name>
    <url-pattern>/createEvent.do</url-pattern>
  </filter-mapping>
  <filter>
    <display-name>MessageCreationFilter</display-name>
    <filter-name>MessageCreationFilter</filter-name>
    <filter-class>com.revature.controller.filter.MessageCreationFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>MessageCreationFilter</filter-name>
    <url-pattern>/createMessage.do</url-pattern>
  </filter-mapping>
  <filter>
    <display-name>FileUploadFilter</display-name>
    <filter-name>FileUploadFilter</filter-name>
    <filter-class>com.revature.controller.filter.FileUploadFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>FileUploadFilter</filter-name>
    <url-pattern>/uploadFile.do</url-pattern>
  </filter-mapping>
  <error-page>
    <error-code>401</error-code>
    <location>/error401.html</location>
  </error-page>
  <filter>
    <display-name>SessionFilter</display-name>
    <filter-name>SessionFilter</filter-name>
    <filter-class>com.revature.controller.filter.SessionFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>SessionFilter</filter-name>
    <url-pattern>*.do</url-pattern>
  </filter-mapping>
</web-app>